apiVersion: extensions/v1beta1
kind: Deployment
metadata:
  labels:
    name: iri
  name: iri
spec:
  replicas: 1
  selector:
    matchLabels:
      name: iri
  template:
    metadata:
      labels:
        name: iri
    spec:
      containers:
      - image: iotafaucet/iri
        imagePullPolicy: IfNotPresent
        name: iri
        ports:
        - containerPort: 14800
          name: udp
          protocol: UDP
        - containerPort: 15600
          name: tcp
          protocol: TCP
        - containerPort: 14265
          name: api
          protocol: TCP
        volumeMounts:
        - mountPath: /iri/data
          name: iri-persistent-storage
      volumes:
      - hostPath:
          path: /data/iri
        name: iri-persistent-storage
---
apiVersion: v1
kind: Service
metadata:
  name: iri
  labels:
    app: iri
spec:
  ports:
    - port: 14800
    - port: 15600
    - port: 14265
  selector:
    app: iri
  type: ClusterIP
